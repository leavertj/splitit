<h1>New group</h1>

<%= form_for(@group) do |f| %>
	  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit "Create Group" %>
  </div>
<%= link_to 'Back', groups_path %>
<% end %>
